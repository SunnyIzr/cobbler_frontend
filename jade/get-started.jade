include _layout.jade
+document('getStarted')
    .row.hide-for-small-up
        form#orderForm(method='post', action='api/calcOrder.php')
            input(type='hidden', name='womenShoesQuantity', value="0")
            input(type='hidden', name='menShoesQuantity', value="0")
            input(type='hidden', name='handbagsQuantity', value="0")

    .row.section.hide-for-large-up.alteredText.orderFormSection.mobile
        .columns.small-12
            h1 How Many Shoes Or Handbags Are You Sending Us?

            .orderFormController
                .quantityWarning
                    | There is a maximum of five items per order

                table
                    tr
                        th Women's
                        td.compositeField(data-field-name='womenShoesQuantity')
                            button.upDownButton.increase
                            span.value 0
                            button.upDownButton.decrease

                    tr
                        th Men's
                            .hint
                                .icon
                                .content
                                    .arrow
                                    .container
                                        h6.title Why are men’s shoes more expensive
                                        div.
                                            Durabitur non sem et turpiss gra vida porta eget sit amet eros am lobortis.
                                            Aenean metus leo, bibendum quis sem non, placer at auctor lacus. Mauris varius, erat eu plac erat egestas.
                        td.compositeField(data-field-name='menShoesQuantity')
                            button.upDownButton.increase
                            span.value 0
                            button.upDownButton.decrease

                    tr
                        th Handbags
                        td.compositeField(data-field-name='handbagsQuantity')
                            button.upDownButton.increase
                            span.value 0
                            button.upDownButton.decrease

                    tr.totalRow
                        th Total
                        td.totalContainer
                            span.value
                                span.currencySymbol $
                                span.digit 0

    .row.section.hide-for-medium-down.alteredText.orderFormSection.desktop
        .columns.small-12
            h1 How Many Shoes Or Handbags Are You Sending Us?

            .orderFormWrapper
                .circleWrapper.secondaryCircleWrapper
                    .circleSection.half.topHalf
                        .circle
                    .verticalSpacer
                    .circleSection.quarter.bottomLeftQuarter
                        .circle
                    .circleSection.quarter.bottomRightQuarter
                        .circle
                .circleWrapper.mainCircleWrapper
                    .circle

                .orderFormController
                    .quantityWarning
                        | There is a maximum of five items per order

                    .item.compositeField.womenQuantityContainer(data-field-name='womenShoesQuantity')
                        .comboButton
                            button.upDownButton.increase(href='javascript:void(0);')
                            button.upDownButton.decrease(href='javascript:void(0);')
                        .valueContainer
                            .fieldLabel Women's
                            div
                                span.value 0
                    .item.totalContainer
                        span.value
                            span.currencySymbol $
                            span.digit 0
                    .item.compositeField.menQuantityContainer(data-field-name='menShoesQuantity')
                        .valueContainer
                            .fieldLabel Men's
                                .hint
                                    .icon
                                    .content
                                        .arrow
                                        .container
                                            h6.title Why are men’s shoes more expensive
                                            div.
                                                Durabitur non sem et turpiss gra vida porta eget sit amet eros am lobortis.
                                                Aenean metus leo, bibendum quis sem non, placer at auctor lacus. Mauris varius, erat eu plac erat egestas.
                            div
                                span.value 0
                        .comboButton
                            button.upDownButton.increase(href='javascript:void(0);')
                            button.upDownButton.decrease(href='javascript:void(0);')

                    .bottomRow
                        .item.compositeField.handbagsQuantityContainer(data-field-name='handbagsQuantity')
                            .valueContainer
                                .fieldLabel Handbags
                                div
                                    span.value 0
                            .comboButton.horizontal
                                button.upDownButton.increase(href='javascript:void(0);')
                                button.upDownButton.decrease(href='javascript:void(0);')
    .row.processControls.alteredText
        span Price looks good!
        a.button.actionProceed(href='get-started-comments.html') Next Step