mixin document(contentClass)
    doctype html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title Cobbler Concierge
        script(type="text/javascript", src="/bower/modernizr/modernizr.js")
        script(type="text/javascript", src="//use.typekit.net/wil1hin.js")
        script(type="text/javascript").
            try{Typekit.load();}catch(e){}
        link(href='css/styles.css', rel='stylesheet')
        // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
        // WARNING: Respond.js doesn't work if you view the page via file://
        | <!--[if lt IE 9]>
        | <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        | <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        | <![endif]-->
    body
        .bodyWrapper
            .bodyCell
                #page.container
                    #menuOverlay.alteredText
                        div
                            a.closeButton(href='javascript:void(0);')
                        .columns.small-12
                            .row
                                .columns.small-12
                                    .logo
                                        img(src='/images/logo.png')

                                    ul.semanticList.menu
                                        li.item
                                            a(href='/get-started.html') Get Started
                                        li.item
                                            a(href='/login.html') Login
                                        li.item
                                            a(href='/pricing.html') Pricing
                                        li.item
                                            a(href='/marketplace.html') Marketplace
                                        li.item
                                            a(href='/about-us.html') About
                                        li.item
                                            a(href='/contact-us.html') Contact Us
                                        li.item
                                            a(href='/faqs.html') FAQs
                                        li.item
                                            a(href='/privacy-and-terms.html') Privacy & Terms

                                    .row
                                        .socialShare
                                            a.facebook(href='//facebook.com', target='_blank')
                                                img(src='/images/facebook.png')
                                            a.twitter(href='//twitter.com', target='_blank')
                                                img(src='/images/twitter.png')
                                            a.instagram(href='//instagram.com', target='_blank')
                                                img(src='/images/instagram.png')


                    #header.row
                        .logo
                            a(href='item.html')
                                img(src='/images/logo.png')
                        .menu
                            a.menuToggleAction(href='javascript:void(0);')

                    #content.row(class=contentClass)
                        .columns.small-12
                            if block
                                block
                    #footer.row.collapse
                        .row
                            .columns.small-12.large-4
                                .row.logo
                                    img(src='/images/logo_footer.png')
                                .row
                                    .socialShare
                                        a.facebook(href='//facebook.com', target='_blank')
                                            img(src='/images/facebook.png')
                                        a.twitter(href='//twitter.com', target='_blank')
                                            img(src='/images/twitter.png')
                                        a.instagram(href='//instagram.com', target='_blank')
                                            img(src='/images/instagram.png')

                            .columns.hidden-for-medium-down.large-8.bottomMenu
                                ul.semanticList
                                    li
                                        a(href='#') About
                                    li
                                        a(href='#') Contact
                                    li
                                        a(href='#') FAQS
                                    li
                                        a(href='#') Privacy & Terms

                // jQuery (necessary for Bootstrap's JavaScript plugins)
                script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js')
                // Include all compiled plugins (below), or include individual files as needed
                script(type="text/javascript", src="/bower/foundation/js/foundation.min.js")
                script(type="text/javascript", src="/js/scripts.js")

