mixin document(contentClass)
    doctype html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title Cobbler Concierge
        script(type="text/javascript", src="/bower/modernizr/modernizr.js")
        script(type="text/javascript", src="//use.typekit.net/wil1hin.js")
        script(type="text/javascript").
            try{Typekit.load();}catch(e){}
        link(href='css/styles.css', rel='stylesheet')
        // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
        // WARNING: Respond.js doesn't work if you view the page via file://
        | <!--[if lt IE 9]>
        | <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        | <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        | <![endif]-->
    body
        .bodyWrapper
            .bodyCell
                #page.container
                    #header.row
                        .logo
                            a(href='item.html')
                                img(src='/images/logo.png')
                        .menu.columns.small-6

                    #content.row(class=contentClass)
                        .columns.small-12
                            if block
                                block
                    #footer.row.collapse
                        .row.hidden-for-medium-down
                            .columns.small-4.logo
                                | Cobbler Concierge
                            .columns.small-8.bottomMenu
                                ul.semanticList
                                    li
                                        a(href='#') About
                                    li
                                        a(href='#') Contact
                                    li
                                        a(href='#') FAQS
                                    li
                                        a(href='#') Privacy & Terms
                        .row.logosWrapper
                            .columns.small-12 As Seen In
                            ul.semanticList.logos
                                li
                                    img(src="/images/views/home/logo_NYC.png")
                                li
                                    img(src="/images/views/home/logo_esquare.png")
                                li
                                    img(src="/images/views/home/logo_townAndCountry.png")
                                li
                                    img(src="/images/views/home/logo_dailyNews.png")
                                li
                                    img(src="/images/views/home/logo_gq.png")

                // jQuery (necessary for Bootstrap's JavaScript plugins)
                script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js')
                // Include all compiled plugins (below), or include individual files as needed
                script(type="text/javascript", src="/bower/foundation/js/foundation.min.js")
                script(type="text/javascript", src="/js/scripts.js")

